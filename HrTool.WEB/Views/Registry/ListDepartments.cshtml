@model IEnumerable<HrTool.WEB.Models.DepartmentViewModel>

@{
    ViewBag.Title = "ListDepartments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListDepartments</h2>

<p>
    @Html.ActionLink("Create New", "CreateDepartment")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentEmail)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeDisplayName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentEmail)
        </td>
        <td>
            @Html.ActionLink("Edit", "UpdateDepartment", new { id=item.DepartmentId }) |
            @Html.ActionLink("Delete", "DeleteDepartment", new { id = item.DepartmentId })
        </td>
    </tr>
}

</table>
